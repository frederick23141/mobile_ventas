<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_marginTop="100dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descargar"
        android:fontFamily="@font/poppinspxtrabold"
        android:textColor="@color/black"
        android:textSize="30sp"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swusuarios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Usuarios"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swclientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Clientes"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swrutas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Rutas"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swmaestroinventario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Maestro inventario"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swcartera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Cartera"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swdetallecartera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Detalle cartera"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swventas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Ventas"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Stock"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swpresupuesto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Presupuesto"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/poppinspxtrabold"
        android:text="Enviar"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swclienteenviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Clientes"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swrutasenviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Rutas"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Switch
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:id="@+id/swpedidosenviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:text="Pedidos"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btnprocesar"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button"
        android:text="Procesar"
        android:textColor="@color/white" />

</LinearLayout>
